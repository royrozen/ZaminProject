<div class="panel panel-default">
  <div class="panel-heading">
    <h3>
  קטגוריות לקורסים
  </h3>
  </div>
  <div class="panel-body">
    <div class="row">
      <div class="col-md-6 col-sm-12">
        <div class="table-responsive">
          <table class="table table-striped table-hover">
            <thead>
              <tr>
                <th>#</th>
                <th>שם</th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              <tr ng-repeat="category in categories track by $index">
                <td>{{$index+1}}</td>
                <td class="col-xs-5">
                  <span ng-hide="category.edit">{{category.Name}}</span>
                  <span ng-show="category.edit">
                <input class="mda-form-control" ng-model="category.Name" >
              </span>
                </td>
                <td>
                  <button ng-hide="category.edit" class="mb-sm btn btn-warning" type="button" title="עריכה" ng-click="setEditMode(category)"><i class="fa fa-pencil"></i></button>
                  <button ng-show="category.edit" class="mb-sm btn btn-success" type="button" title="שמירה" ng-click="update(category)"><i class="fa fa-check"></i></button>
                  <button class="mb-sm btn btn-danger" type="button" title="מחיקה" ng-click="deleteDialog(category, $index, $event)"><i class="fa fa-trash-o"></i></button>
                </td>
              </tr>
              <!-- new item row -->
              <tr ng-show="newCategory != undefined">
                <td></td>
                <td class="col-xs-5">
                  <input class="mda-form-control" ng-model="newCategory.Name" placeholder="שם">
                </td>
                <td>
                  <button class="mb-sm btn btn-success" type="button" title="שמירה" ng-click="create()"><i class="fa fa-check"></i></button>
                </td>
              </tr>
            </tbody>
          </table>

        </div>

      </div>
    </div>

  </div>

</div>

<md-button class="md-fab md-fab-bottom-right md-primary" title="הוספה" ng-click="addItem()">
  <i class="fa fa-plus"></i>
</md-button>
