<div id="resetPassword">
    <div ng-show="codeExists=='code_exists'">
        <h2>איפוס סיסמא</h2>
        <form name="resetPasswordForm" novalidate>
            <div class="form-group row">
                <label class="col-md-2 control-label">סיסמא</label>
                <div class="col-md-3">
                    <input type="password" class="form-control" ng-model="resetPasswordObject.password" name="password" required="" />
                    <div style="color: red; font-size: 12px;" ng-show="(resetPasswordForm.password.$dirty && resetPasswordForm.password.$invalid) || (resetPasswordFormSubmitted && resetPasswordForm.password.$invalid)">
                        <span ng-show="resetPasswordForm.password.$error.required"><b>אנא הכנס סיסמא </b></span>
                    </div>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-md-2 control-label">חזור על הסיסמא</label>
                <div class="col-md-3">
                    <input type="password" class="form-control" ng-model="resetPasswordObject.confirmPassword" name="passwordConfirm" required="" />
                    <div style="color: red; font-size: 12px;" ng-show="(resetPasswordForm.passwordConfirm.$dirty && resetPasswordForm.passwordConfirm.$invalid) || (resetPasswordFormSubmitted && resetPasswordForm.passwordConfirm.$invalid)">
                        <span ng-show="resetPasswordForm.passwordConfirm.$error.required && !wrongResetPassword "><b>אנא חזור על הסיסמא </b></span>
                    </div>
                    <div ng-show="wrongResetPassword" style="color: red; font-size: 12px;">
                        <span><b>הסיסמאות לא תואמות</b></span>
                    </div>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-md-2 control-label">&nbsp;</label>
                <div class="col-md-3">
                    <button type="submit" ng-click="resetPassword();resetPasswordFormSubmitted = true;">
                        אפס סיסמא
                    </button>
                </div>
            </div>
        </form>
        <div class="row">
            <span ng-show="passwordChanged">הסיסמא הוחלפה בהצלחה</span>
        </div>
    </div>

    <div ng-show="codeExists!='code_exists' &&  codeExists!='code_expired'" class="row">
        לא ניתן לאפס את הסיסמא
        <br />
        <a href="#">לחזרה לעמוד הראשי</a>


    </div>
    <div ng-show="codeExists=='code_expired'" class="row">
        הקוד לא בתוקף
        <a href="#home/resetPasswordRequest">לאיפוס הסיסמא </a>
    </div>
</div>