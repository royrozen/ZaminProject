<div class="panel panel-default">
  <div class="panel-heading">
    <h3>
    משתמשים
    </h3>
  </div>
  <div class="panel-body">
    <a href="#user-form">
    <md-button class="md-fab md-fab-bottom-right md-primary" title="הוספה">
      <i class="fa fa-plus"></i>
    </md-button>
    </a>
    <div class="row">
      <div class="col-md-12 col-sm-12">
        <div class="table-responsive">
          <table class="table table-striped table-hover">
            <thead>
              <tr>
                <th>#</th>
                <th>
                  שם פרטי
                </th>
                <th>
                שם משפחה
                </th>
                <th>
                  דוא"ל
                </th>
                <th>
                טלפון
                </th>
                <th>
                  תפקיד
                </th>
                <th>
                </th>
              </tr>
            </thead>
            <tbody>
              <tr ng-repeat="user in users track by $index">
                <td>{{$index+1}}</td>
                <td>{{user.FirstName}}</td>
                <td>{{user.LastName}}</td>
                <td>{{user.Email}}</td>
                <td>{{user.Phone}}</td>
                <td>{{user.RoleName}}<span ng-hide="user.IsFranchiseAdmin">{{user.BranchName}}</span></td>

                <td>
                  <a href="#user-form/{{user.UserId}}" class="mb-sm btn btn-warning" type="button" title="עריכה">
                    <i class="fa fa-pencil"></i>
                  </a>
                  <button class="mb-sm btn btn-danger" type="button" title="מחיקה" ng-click="deleteDialog(user, $index, $event)">
                    <i class="fa fa-trash-o"></i>
                  </button>

                  <button class="mb-sm btn btn-primary" type="button" title="חסימה" ng-hide="user.IsLockedOut" ng-click="lock(true, user.UserId, user)">
                    <i class="fa fa-lock"></i>
                  </button>
                  <button class="mb-sm btn btn-primary" type="button" title="בטל חסימה" ng-show="user.IsLockedOut" ng-click="lock(false, user.UserId, user)">
                    <i class="fa fa-unlock"></i>
                  </button>
                </td>
              </tr>
            </tbody>
          </table>

        </div>

      </div>
    </div>

  </div>
</div>
