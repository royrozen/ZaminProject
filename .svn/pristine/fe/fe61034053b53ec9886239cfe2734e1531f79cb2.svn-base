<div class="panel panel-default">
  <div class="panel-heading">
    <h3>
    מערכי שיעור
    </h3>
  </div>
  <div class="panel-body">

    <div class="row">
      <div class="col-md-6 col-sm-12">
        <div class="table-responsive">
          <table class="table table-striped table-hover">
            <thead>
              <tr>
                <th>#</th>
                <th>
                  תיאור
                </th>
                <th>
                  כמות הורדות
                </th>
                <th>
                  אנשים שאהבו
                </th>
                <th>
                  תאריך העלאה
                </th>
                <th>
                  מצגות
                </th>
                <th>
                  מערכי שיעור
                </th>

                <th></th>
              </tr>
            </thead>
            <tbody>
              <tr ng-repeat="lessonPlan in lessonPlans track by $index">
                <td>{{$index+1}}</td>

                <td>
                  {{lessonPlan.Description}}
                </td>
                <td>
                  {{lessonPlan.NumOfDownloads}}
                </td>
                <td>
                  {{lessonPlan.NumOfLikes}}
                </td>
                <td>
                  {{lessonPlan.CreateDate.split(" ")[0]}}
                </td>
                <td>
                    <span ng-show="lessonPlan.numOfPresentations != 0">{{lessonPlan.numOfPresentations}}</span>
                    <i ng-show="lessonPlan.numOfPresentations == 0" class="fa fa-times"></i>
                </td>
                <td>
                    <span ng-show="lessonPlan.numOfWritten != 0">{{lessonPlan.numOfWritten}}</span>
                    <i ng-show="lessonPlan.numOfWriten == 0" class="fa fa-times"></i>
                </td>
                <td>
                  <a href="#lesson-plan-form/{{lessonPlan.Id}}" class="mb-sm btn btn-warning" type="button" title="עריכה" ng-click="setCurrentlessonPlanById(lessonPlan.Id)">
                    <i class="fa fa-pencil"></i>
                  </a>
                  <button class="mb-sm btn btn-danger" type="button" title="מחיקה" ng-click="deleteDialog(lessonPlan, $index, $event)">
                    <i class="fa fa-trash-o"></i>
                  </button>
                </td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
<a href="#lesson-plan-form" class="md-button md-fab md-fab-bottom-right md-primary" title="הוספה">
  <i class="fa fa-plus"></i>
</a>
