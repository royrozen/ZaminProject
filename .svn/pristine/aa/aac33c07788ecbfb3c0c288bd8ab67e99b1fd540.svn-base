<md-card>
  <md-card-content>
    <div layout="row">
      <h4>חיפוש</h4></div>
    <div layout="row" class="align-center">
      <div flex="10" class="text-center">מספר טלפון</div>
      <div flex="20">
        <input class="form-control" ng-model="filter.phone" placeholder="טלפון" />
      </div>
      <div flex="10" class="text-center"> שם משתמש</div>
      <div flex="20">
        <input class="form-control" ng-model="filter.name" placeholder="שם" />
      </div>
      <div flex="5"></div>
      <div flex="20">
        <button class="md-raised md-primary md-button md-ink-ripple" ng-click="getAppUsers()" aria-label="חפש">
          חפש
          <div class="md-ripple-container"></div>
        </button>
        <button class="md-raised md-button md-ink-ripple" ng-click="clearFilter()" aria-label="נקה">
          <i class="fa fa-refresh"></i>
          <div class="md-ripple-container"></div>
        </button>
      </div>

    </div>
    <div class="download-btns">
      <button class="btn btn-primary" type="button" title="" ng-click="exportWebUsersCsv()">
        <i class="fa fa-file-excel-o"></i>
        <span>הורדת המשתמשים לקובץ EXCEL</span>
      </button>
      <!-- <button class="btn btn-warning" type="button" title="">
        <i class="fa fa-download"></i>
        <span>רשימת טלפונים</span>
      </button> -->
    </div>
    <br />
    <br />
    <!-- <div layout="row" class="align-center">
      <div flex="10" class="text-center">
        מיין לפי:
      </div>
      <div flex="20">
        <md-select ng-model="filter.orderByLastOrderDate" ng-change="getAppUsers()">
          <md-option value="false">שם משתמש</md-option>
          <md-option value="true"> תאריך התחברות אחרון </md-option>
        </md-select>
      </div>
    </div> -->
  </md-card-content>
</md-card>
<br />

<div class="panel panel-default">
  <div class="panel-heading">
    <h3>
    משתמשים
    </h3>
  </div>
  <div class="panel-body">
    <a href="#user-form">
    <md-button class="md-fab md-fab-bottom-right md-primary" title="הוספה">
      <i class="fa fa-plus"></i>
    </md-button>
    </a>
    <div class="row">
      <div class="col-md-12 col-sm-12">
        <div class="table-responsive">
          <table class="table table-striped table-hover">
            <thead>
              <tr>
                <th>#</th>
                <th>
                  שם פרטי
                </th>
                <th>
                שם משפחה
                </th>
                <th>
                  דוא"ל
                </th>
                <th>
                טלפון
                </th>
                <th>
                  סוג המשתמש
                </th>
                <th>
                </th>
              </tr>
            </thead>
            <tbody>
              <tr ng-repeat="user in users track by $index">
                <td>{{$index+1}}</td>
                <td>{{user.FirstName}}</td>
                <td>{{user.LastName}}</td>
                <td>{{user.Email}}</td>
                <td>{{user.Phone}}</td>
                <td> <span ng-show="user.UserTypeId=='0'" > הורה </span>
                    <span ng-show="user.UserTypeId=='1'" > מורה </span>
                    <span ng-show="user.UserTypeId=='2'" > מדריך</span>

                <td>
                  <a href="#user-form/{{user.Id}}" class="mb-sm btn btn-warning" type="button" title="עריכה">
                    <i class="fa fa-pencil"></i>
                  </a>
                  <a href="#marketing" class="mb-sm btn btn-info" ng-click="setclientEmail(user.Email)" type="button" title="שליחת הודעה ללקוח">
                    <i class="fa fa-envelope"></i>
                  </a>
                  <button class="mb-sm btn btn-danger" type="button" title="מחיקה" ng-click="deleteDialog(user, $index, $event)">
                    <i class="fa fa-trash-o"></i>
                  </button>

                  <!-- <button class="mb-sm btn btn-primary" type="button" title="חסימה" ng-hide="user.IsLockedOut" ng-click="lock(true, user.Id, user)">
                    <i class="fa fa-lock"></i>
                  </button>
                  <button class="mb-sm btn btn-primary" type="button" title="בטל חסימה" ng-show="user.IsLockedOut" ng-click="lock(false, user.Id, user)">
                    <i class="fa fa-unlock"></i>
                  </button> -->
                </td>
              </tr>
            </tbody>
          </table>

        </div>

      </div>
    </div>

  </div>
</div>
