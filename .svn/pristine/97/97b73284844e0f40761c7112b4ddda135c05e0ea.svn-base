
<div id="signUp" ng-show="signUp">
    <h2>
        הרשמה
    </h2>
    <form name="signupForm" novalidate>
        <div class="form-group row">
            <label class="col-md-2 control-label">שם פרטי*</label>
            <div class="col-md-3">
                <input type="text" class="form-control" ng-model="signupInfo.FirstName" name="FirstName" ng-required="true" maxlength="180" />
                <div style="color: red; font-size: 12px;" ng-show="(signupForm.fullName.$dirty && signupForm.FirstName.$invalid) || (signupFormSubmitted && signupForm.FirstName.$invalid)">
                    <span ng-show="signupForm.FirstName.$error.required"><b>אנא הכנס שם פרטי</b></span>
                </div>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-md-2 control-label">שם משפחה*</label>
            <div class="col-md-3 ">
                <input type="text" class="form-control" ng-model="signupInfo.LastName" name="LastName" ng-required="true" maxlength="180" />
                <div style="color: red; font-size: 12px;" ng-show="(signupForm.LastName.$dirty && signupForm.LastName.$invalid) || (signupFormSubmitted && signupForm.LastName.$invalid)">
                    <span ng-show="signupForm.LastName.$error.required"><b>אנא הכנס שם משפחה</b></span>
                </div>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-md-2 control-label">תאריך לידה*</label>
            <div class="col-md-3 ">
                <input type="text" class="form-control" ng-model="signupInfo.BirthdayDate" name="BirthdayDate" ng-required="true" maxlength="180" />
                <div style="color: red; font-size: 12px;" ng-show="(signupForm.BirthdayDate.$dirty && signupForm.BirthdayDate.$invalid) || (signupFormSubmitted && signupForm.BirthdayDate.$invalid)">
                    <span ng-show="signupForm.BirthdayDate.$error.required"><b>אנא הכנס מספר בית עסק</b></span>
                </div>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-md-2 control-label">מין*</label>
            <div class="col-md-3 ">
                <label>
                    <input type="radio" value="true" ng-model="signupInfo.isMale"> זכר
                </label>
                <label>
                    <input type="radio" value="false" ng-model="signupInfo.isMale"> נקבה
                </label>
                <!-- <div style="color: red; font-size: 12px;" ng-show="(signupForm.isMale.$dirty && signupForm.isMale.$invalid) || (signupFormSubmitted && signupForm.isMale.$invalid)">
                    <span ng-show="signupForm.isMale.$error.required"><b>אנא הזן מין</b></span>
                </div> -->
            </div>
        </div>
        <br />
        <div class="form-group row">
            <label class="col-md-2 control-label">סוג משתמש*</label>
            <div class="col-md-3 ">
                <label>
                    <input type="radio" value="1" ng-model="signupInfo.UserType" > הורה
                </label>
                <label>
                    <input type="radio" value="2" ng-model="signupInfo.UserType"> מורה
                </label>
                <label>
                    <input type="radio" value="3" ng-model="signupInfo.UserType"> מדריך
                </label>
                <!-- <div style="color: red; font-size: 12px;" ng-show="(signupForm.isMale.$dirty && signupForm.isMale.$invalid) || (signupFormSubmitted && signupForm.isMale.$invalid)">
                    <span ng-show="signupForm.isMale.$error.required"><b>אנא הזן מין</b></span>
                </div> -->
            </div>
        </div>

        <div class="form-group row">
            <label class="col-md-2 control-label">Email*</label>
            <div class="col-md-3 ">
                <input type="email" class="form-control" ng-model="signupInfo.Email" name="Email" maxlength="250" required />
                <div style="color: red; font-size: 12px;" ng-show="(signupForm.Email.$dirty && signupForm.Email.$invalid) || (signupFormSubmitted && signupForm.Email.$invalid)">
                    <span ng-show="signupForm.Email.$error.required"><b>אנא הכנס אימייל</b></span>
                </div>
                <div style="color: red; font-size: 12px;" ng-show="(signupForm.Email.$dirty && signupForm.Email.$invalid) || (signupFormSubmitted && signupForm.Email.$invalid)">
                    <span ng-show="signupForm.Email.$error.email"><b>אימייל לא תקין</b></span>
                </div>
                <div style="color: red; font-size: 12px;" ng-show="emailExists">
                    <span><b>אימייל קיים במערכת</b></span>
                </div>
            </div>
        </div>
        <!-- <div class="form-group row">
            <label class="col-md-2 control-label">כתובת בית העסק*</label>
            <div class="col-md-3 ">
                <input type="text" class="form-control" ng-model="signupInfo.Address" name="address" maxlength="250" required />
            </div>
        </div> -->
        <div class="form-group row">
            <label class="col-md-2 control-label">סיסמא*</label>
            <div class="col-md-3 ">
                <input type="password" class="form-control" ng-model="signupInfo.Password" name="password" required maxlength="30" />
                <div style="color: red; font-size: 12px;" ng-show="(signupForm.password.$dirty && signupForm.password.$invalid) || (signupFormSubmitted && signupForm.password.$invalid)">
                    <span ng-show="signupForm.password.$error.required"><b>אנא הכנס סיסמא</b></span>
                </div>
                <div style="color: red; font-size: 12px;" ng-show="passwordTooShort">
                    <span><b>הסיסמא צריכה להכיל 6 תווים לפחות</b></span>
                </div>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-md-2 control-label">חזור על הסיסמא*</label>
            <div class="col-md-3 ">
                <input type="password" class="form-control" ng-model="signupInfo.ConfirmPassword" name="passwordConfirm" required maxlength="30" />
                <div style="color: red; font-size: 12px;" ng-show="(signupForm.passwordConfirm.$dirty && signupForm.passwordConfirm.$invalid) || (signupFormSubmitted && signupForm.passwordConfirm.$invalid)">
                    <span ng-show="signupForm.passwordConfirm.$error.required && !wrongPassword"><b>אנא חזור על הסיסמא</b></span>
                </div>
                <div ng-show="wrongPassword" style="color: red; font-size: 12px;">
                    <span><b>הסיסמאות לא תואמות</b></span>
                </div>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-md-2 control-label">מספר נייד*</label>
            <div class="col-md-3 ">
                <input type="text" class="form-control" ng-model="signupInfo.Phone" name="Phone" required maxlength="180" />
                <div style="color: red; font-size: 12px;" ng-show="(signupForm.Phone.$dirty && signupForm.Phone.$invalid) || (signupFormSubmitted && signupForm.Phone.$invalid)">
                    <span ng-show="signupForm.Phone.$error.required"><b>אנא הכנס מספר נייד</b></span>
                </div>
                <div style="color: red; font-size: 12px;" ng-show="(signupForm.Phone.$dirty && signupForm.Phone.$invalid) || (signupFormSubmitted && signupForm.Phone.$invalid)">
                    <span ng-show="!signupForm.Phone.$valid && !signupForm.Phone.$error.required"><b>מספר לא תקין</b></span>
                </div>
            </div>

        </div>
        <!-- <div class="form-group row">
            <label class="col-md-2 control-label">שטח העסק*</label>
            <div class="col-md-3 ">
                <select type="text" class="form-control" ng-model="signupInfo.PriceListItem" name="priceItem" ng-options="item.Text for item in pricesitems" required></select>
                <div style="color: red; font-size: 12px;" ng-show="(signupForm.PriceListItem.$dirty && signupForm.PriceListItem.$invalid) || (signupFormSubmitted && signupForm.PriceListItem.$invalid)">
                    <span ng-show="signupForm.PriceListItem.$error.required"><b>אנא הכנס שטח עסק</b></span>
                </div>
            </div>
        </div> -->
        <!-- <div class="form-group row">
            <label class="col-md-2 control-label">כינוי (שם הסניף)</label>
            <div class="col-md-3 ">
                <input type="text" class="form-control" ng-model="signupInfo.Nickname" name="nickname" maxlength="180" />
            </div>
        </div> -->

              <div class="form-group row">
            <label class="col-md-2 control-label">&nbsp;</label>
            <div class="col-md-3">
                <button type="submit" ng-click="signUp();signupFormSubmitted = true;" id="purchaseBtn">
                    הרשמה
                </button>
                <p style="font-size: 11pt; text-align: center;">לחיצה על הכפתור מהווה הסכמה <a href="/pdfs/Eula.pdf" target="_blank">לתנאי התקנון</a></p>
            </div>

        </div>
    </form>

</div>

<div ng-show="!signUp"></div>
