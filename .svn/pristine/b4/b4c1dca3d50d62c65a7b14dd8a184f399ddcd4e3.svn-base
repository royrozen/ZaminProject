<div class="panel panel-default pizzaForm">
  <div class="panel-heading">
    <h3>
    סירטונים מעניינים
    </h3>
  </div>
  <div class="panel-body">
    <div class="row">
      <div class="col-sm-12">
        <div class="table-responsive">
          <table class="table table-striped table-hover">
            <thead>
              <tr>
                <th>#</th>
                <th>שם הסירטון</th>
                <th>תיאור</th>
                <th>תגיות</th>
                <th>תאריך העלאה</th>
                <th>מספר צפיות</th>
                <th>האם תוכן חופשי?</th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              <tr ng-repeat="video in interestingVideos track by $index">
                <td>{{$index+1}}</td>
                <td>
                  <span>{{video.Name}}</span>

                </td>
                <td>
                  <span >{{video.Description}}</span>
                </td>
                <td>
            <span>
              <div ng-repeat="tag in video.Tags">
                {{tag.Name}}
                <span ng-hide="$last">, </span>
              </div>
            </span>
              </td>
                <td>
            {{video.CreateDate}}
                </td>
                <td>
                  <span >{{video.NumOfLikes}}</span>

                </td>
                <td>
                  <span>v/x  TODO</span>
               </td>

                <td>
          <a href="#video-form/{{video.Id}}" class="mb-sm btn btn-warning" type="button" title="עריכה" >
            <i class="fa fa-pencil"></i>
          </a>
          <button class="mb-sm btn btn-danger" type="button" title="מחיקה" ng-click="deleteDialog(video, $index, $event)">
            <i class="fa fa-trash-o"></i>
          </button>
        </td>
        </tr>

        </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
</div>
<a href="#video-form" class="md-button md-fab md-fab-bottom-right md-primary" title="הוספה" >
  <i class="fa fa-plus"></i>
</a>
